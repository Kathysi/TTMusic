<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ssc.ttmusic"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <application
         android:allowBackup="true"
        android:allowClearUserData="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:vmSafeMode="true" 
        android:name="com.ssc.ttmusic.application.App"
        android:theme="@android:style/Theme.Black.NoTitleBar" >
        <activity
            android:name="com.ssc.ttmusic.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.ssc.ttmusic.MainActivity"/>
         <activity android:name="com.ssc.ttmusic.MySongActivity"/>
         <activity android:name="com.ssc.ttmusic.LocalSongActivity"/>
        <activity android:name="com.ssc.ttmusic.RankActivity"/>
        <activity android:name="com.ssc.ttmusic.RadioActivity"/>
        <activity android:name="com.ssc.ttmusic.SearchActivity"/>
        <activity android:name="com.ssc.ttmusic.SongsActivity"/>
        <activity android:name="com.ssc.ttmusic.ArtistSongsActivity"/>
        <activity android:name="com.ssc.ttmusic.SingerActivity"/>
        <activity android:name="com.ssc.ttmusic.CollectDetailActivity"/>
        <activity android:name="com.ssc.ttmusic.AlbumActivity"></activity>
        <activity android:name="com.ssc.ttmusic.PlayActivity"></activity>
        <activity android:name="com.ssc.ttmusic.MoreActivity"></activity>
        <service android:name="com.ssc.ttmusic.service.PlayService"/>
    </application>

</manifest>