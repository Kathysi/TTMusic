<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/rank_arrow"
        android:layout_toRightOf="@+id/rank_logo"
        android:orientation="vertical"
        android:weightSum="6" >

        <TextView
            android:id="@+id/rank_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/ranktitleitem_textsize" />

        <TextView
            android:id="@+id/rankname1"
            style="@style/RanksmallText" />

        <TextView
            android:id="@+id/rankname2"
            style="@style/RanksmallText" />

        <TextView
            android:id="@+id/rankname3"
            style="@style/RanksmallText" />

        <TextView
            android:id="@+id/rankname4"
            style="@style/RanksmallText" />
    </LinearLayout>

    <ImageView
        android:id="@+id/rank_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@null"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/rank_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/img_rightarrow" />

</RelativeLayout>